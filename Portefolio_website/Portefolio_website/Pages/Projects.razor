@page "/projects"

@using Portefolio_website.Data 
@inject ProjectService projectsService 

<h1>Projects</h1>
@if (projects == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <h1>ya boii</h1>
}

    @code {
        private int currentCount = 0;

        private Project[] projects;

        protected override async Task OnInitializedAsync()
        {
            projects = await projectsService.GetProjectsAsync();
        }

        private void IncrementCount()
        {
            currentCount++;
        }
    }
